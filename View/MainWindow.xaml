<Window x:Class="WPF_Tut9_MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tut9_MVVM.View"
        xmlns:viewModels="clr-namespace:WPF_Tut9_MVVM.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500"
        MinHeight="300" MinWidth="400"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModels:MainWindowViewModel></viewModels:MainWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="75"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Margin" Value="0,0,5,0"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add" Command="{Binding AddCommand}"></Button>
            <Button Content="Delete" Command="{Binding DeleteCommand}"></Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False"
                      ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="4*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Serial Nr" Binding="{Binding SerialNumber}" Width="4*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="4*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1">
                <Label Content="Name"></Label>
                <TextBox Margin="5,0,5,15"
                         Text="{Binding SelectedItem.Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Content="Serial Number"></Label>
                <TextBox Margin="5,0,5,15"
                         Text="{Binding SelectedItem.SerialNumber, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Content="Quantity"></Label>
                <TextBox Margin="5,0,5,15"
                         Text="{Binding SelectedItem.Quantity, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
